{
  "permission_service": {
    "url": "thor-permission.svc-qa.thor.comcast.com"
  },
  "session_service": {
    "url": "res-api.svc-qa.thor.comcast.com"
  },
  "ad_platform_service": {
    "url": "ad-platform-service.svc-qa.thor.comcast.com"
  },
  "secure_storage_service": {
    "url": "ss.dev.developer.comcast.com"
  },
  "xvp_playback_service": {
    "url": "https://playback.exp.xvp.na-1.xcal.tv/v1"
  },
  "xvp_video_service": {
    "url": "https://ess.exp.xvp.na-1.xcal.tv/v1"
  },
  "xvp_session_service": {
    "url": "https://session.exp.xvp.na-1.xcal.tv/v1"
  },
  "xvp_data_scopes": {
    "content_access": "account",
    "sign_in_state": "account"
  },
  "catalog_service": {
    "enabled": false,
    "url": "catalog-service.dev.developer.comcast.com",
    "polling_interval_secs": 14400,
    "retry_interval_secs": 30,
    "max_retry_interval_secs": 600,
    "saved_dir": "/opt/persistent/ripple"
  },
  "app_authorization_rules": {
    "app_ignore_rules": {
      "foo-insecure": [
        "*"
      ],
      "refui": [
        "*"
      ],
      "root": [
        "*"
      ],
      "foo": [
        "*"
      ]
    }
  },
  "method_ignore_rules": [
    "some.nonexistent.method"
  ],
  "behavioral_metrics": {
    "sift": {
      "endpoint": "https://collector-dev.sift.comcast.com/events/entos",
      "api_key": "deprecated",
      "batch_size": 3,
      "max_queue_size": 20,
      "send_interval_seconds" : 30,
      "metrics_schemas": {
        "default_metrics_namespace": "entos",
        "default_metrics_schema_version": "1",
        "metrics_schemas": [
          {
            "event_name": "app_error",
            "namespace": "entos",
            "version": "1",
            "alias": "app_error"
          },
          {
            "event_name": "app_lc_state_change",
            "namespace": "entos",
            "version": "1",
            "alias": "app_lc_state_change"
          },
          {
            "event_name": "custom",
            "namespace": "entos",
            "version": "3",
            "alias": "custom"
          },
          {
            "event_name": "StartContent",
            "namespace": "entos",
            "version": "1",
            "alias": "inapp_content_start"
          },
          {
            "event_name": "StopContent",
            "namespace": "entos",
            "version": "1",
            "alias": "inapp_content_stop"
          },
          {
            "event_name": "Page",
            "namespace": "entos",
            "version": "1",
            "alias": "inapp_page_view"
          }
        ]
      }
    }
  },
  "privacy_service": {
    "url": "https://ess-stg.exp.xvp.na-1.xcal.tv/"
  },
  "sync_monitor_service": {
    "linchpin_url": "wss://linchpin-ci.lp.xcal.tv:18082/",
    "services": [
      {
        "service_name": "privacy_service",
        "listen_topic": "p:{partnerId}:a:{accountId}:t:xvp-client",
        "ttl": 43200
      },
      {
        "service_name": "xvp_session_service",
        "listen_topic": "p:{partnerId}:a:{accountId}:t:xvp-client",
        "ttl": 43200
      }
    ]
  },
  "cloud_firebolt_mapping": {
    "user_grants": {
      "xcal:appDataCollection": {
        "cap": "xrn:firebolt:capability:data:app-usage",
        "role": "Use"
      },
      "xcal:appEntitlementCollection": {
        "cap": "xrn:firebolt:capability:discovery:entitlements",
        "role": "Use"
      }
    }
  }
}